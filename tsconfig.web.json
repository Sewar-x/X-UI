{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": [
      "ES2018",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "unplugin-vue-macros/macros-global"
    ],
    "skipLibCheck": true
  },
  "include": [
    "packages",
    "types/vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**/*",
    "**/*.md"
  ]
}