{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@x-ui/*": [
        "./packages/*",
        "./*"
      ]
    }
  },
  "include": [
    "packages/*.d.ts",
    "packages/element-plus/components", // element-ui用js开发
    "docs"
  ],
  "exclude": [
    "node_modules"
  ]
}
